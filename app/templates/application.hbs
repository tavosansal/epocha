{{page-title "Epocha"}}

<nav class="navbar navbar-dark bg-dark fixed-top">
  <div class="container-fluid">
    {{!-- Brand and toggle get grouped for better mobile display --}}
    {{#if electron.isElectron}}
      <div class="navbar-header">
        <span class="navbar-toggler" {{action "openMenu"}}>
          <span class="navbar-text header-toggle">
            <span class="navbar-toggler-icon"></span>
          </span>
        </span>

        <div class="navbar-brand">
          Epocha
        </div>
      </div>
    {{else}}
      <div class="navbar-header">
        <button
          type="button"
          class="navbar-toggler collapsed"
          data-bs-toggle="collapse"
          data-bs-target="#bs-example-navbar-collapse-1"
        >
          <span class="visually-hidden">Toggle navigation</span>
          <span class="navbar-toggler-icon"></span>
        </button>
        <LinkTo @route="home" class="navbar-brand">
          <img
            src="/img/android-chrome-192x192.png"
            class="img-inverted float-start"
            alt="world clock"
            height="32px"
          /><span class="d-none d-sm-inline padding-left">Home</span>
        </LinkTo>
      </div>

      {{!-- Collect the nav links, forms, and other content for toggling --}}
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav ms-auto">
          <li class="d-sm-none">
            <LinkTo @route="home">
              Home
            </LinkTo>
          </li>
          <li>
            <LinkTo @route="about"> About </LinkTo>
          </li>
          {{! <li>
            <LinkTo @route="downloads"> Downloads </LinkTo>
          </li> }}
          <li>
            <a href="https://github.com/tavosansal/epocha" target="_blank" rel="noopener noreferrer">
              <img src="img/octocat.png" style="width: 20px;" />
            </a>
          </li>
        </ul>
      </div>
    {{/if}}
    {{!-- /.navbar-collapse --}}
  </div>
  {{!-- /.container-fluid --}}
</nav>
{{outlet}}