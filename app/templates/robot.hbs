<div class="jumbotron">
    <div class="container">
        <h1>Epocha</h1>
        <form>
            <div class="form-group">
                <label>Current Robot Date/Time (Unix)</label>
                {{input id="robot" type="text" action="pause" on="focus-in" class="form-control" placeholder="Robot Date" value=currentTime}}
            </div>
            <div class="form-group">
                <label>Current Human Date/Time (Local)</label>
                {{input type="text" class="form-control" value=humanDate disabled="disabled"}}
            </div>
            {{#if isNotPaused}}
                <button type="submit" class="btn btn-primary" {{action "pause"}}>||</button>
            {{else}}
                <button type="submit" class="btn btn-primary" {{action "play"}}>></button>
            {{/if}}
        </form>
    </div>
</div>
