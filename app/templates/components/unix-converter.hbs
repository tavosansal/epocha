<form class="card">
  <div class="card-body">
    <div class="mb-3">
      <label class="form-label">Label</label>
      <input
        value={{this.model.label}}
        placeholder="Add Label"
        class="form-control"
        oninput={{action "saveLabel" value="target.value"}}
      />
    </div>
    <div class="mb-3">
      <label class="form-label">Unix Timestamp</label>
      <p class="form-text">Paste your own timestamp to pause live mode and see a date.</p>
      <input
        value={{this.currentTimeDisplay}}
        id="robot"
        onfocus={{action "pause"}}
        oninput={{action "convertTimestamp" value="target.value"}}
        class="form-control"
        placeholder="Type a timestamp (ex. 1456249984)"
      />
    </div>
    <div class="mb-3">
      <label class="form-label">Date and Time ({{this.currentTimezone}})</label>
      <TimezoneSelect
        @onChange={{action "timezoneChanged"}}
        @timezones={{this.timezones}}
        @timezoneSelected={{this.currentTimezone}}
      />
      <div>&nbsp;</div>
      <input
        class="form-control"
        value={{this.humanDate}}
        type="datetime-local"
        step="1"
        onfocus={{action "pause"}}
        oninput={{action "convertDate" value="target.value"}}
      />
    </div>
    <div class="mb-3">
      <label class="form-label">Date and Time (UTC)</label>
      <Input @type="text" class="form-control" @value={{this.humanDateUtc}} disabled="disabled" />
    </div>
    <div class="mb-3">
      <label class="form-label">ISO Date (UTC)</label>
      <Input @type="text" class="form-control" @value={{this.isoString}} disabled="disabled" />
    </div>
    {{#if this.isNotPaused}}
      <button type="submit" class="btn btn-outline-secondary" {{action "pause"}}>
        ‚è∏Ô∏è Pause Live Mode
      </button>
    {{else}}
      <button type="submit" class="btn btn-success" {{action "play"}}>
        ‚ñ∂Ô∏è Play Live Mode &nbsp;
      </button>
    {{/if}}
    {{#unless electron.isElectron}}
      <button class="btn btn-danger btn-sm float-end" type="submit" {{action "removeConverter"}}>
        üóëÔ∏è Delete
      </button>
    {{/unless}}
  </div>
</form>